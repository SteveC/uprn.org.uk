<!DOCTYPE html>
<html>
<head>
  <title>UPRN.org.uk</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= yield :cdn_code %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= javascript_importmap_tags %>
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <% flash.each do |key, value| %>
         <div class= "alert-success"><%= value %></div>
        <% end %>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">My Application</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'home' %>"><a href="/">Home</a></li>
            <li class="<%= 'active' if params[:controller] == 'dashboard' %>"><a href="/dashboard">My Dashboard</a></li>
          </ul>
          <% if session[:userinfo] %>
            <ul class="nav navbar-nav navbar-right">
              <li class="<%= 'active' if params[:controller] == 'logout' %>"><a id="qsLogoutBtn" href="/auth/logout">Logout</a></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
